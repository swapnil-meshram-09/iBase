CREATE TABLE courses (
    id INT AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(30) NOT NULL,
    description TEXT NOT NULL,
    start_date DATE NOT NULL,
    end_date DATE NOT NULL,
    duration VARCHAR(30) NOT NULL,
    amount DECIMAL(10,2) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE student_registration (
     `id` INT PRIMARY KEY AUTO_INCREMENT,
    `name` VARCHAR(30) NOT NULL,
    `contact` VARCHAR(10) NOT NULL UNIQUE,
    `email` VARCHAR(30) NOT NULL UNIQUE,
    `college_name` VARCHAR(30) NOT NULL,
    `department` VARCHAR(30) NOT NULL,
    `year` VARCHAR(10) NOT NULL,
    `hod_name` VARCHAR(30) NOT NULL,
    `hod_contact` VARCHAR(10) NOT NULL,
    `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE student_password (
    id INT AUTO_INCREMENT PRIMARY KEY,
    contact VARCHAR(10) NOT NULL UNIQUE,
    email VARCHAR(30) NOT NULL,
    password VARCHAR(30) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE student_course_enrollment (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(30) NOT NULL,
    contact VARCHAR(10) NOT NULL,
    title VARCHAR(30) NOT NULL,
    description TEXT,
    start_date DATE,
    end_date DATE,
    duration VARCHAR(20),
    amount DECIMAL(10,2) NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE addFaculty (
    id INT AUTO_INCREMENT PRIMARY KEY,
    faculty_name VARCHAR(30) NOT NULL,
    designation VARCHAR(30) NOT NULL,
    department VARCHAR(30) NOT NULL,
    contact VARCHAR(10) NOT NULL UNIQUE,
    state VARCHAR(30) NOT NULL,
    city VARCHAR(30) NOT NULL,
    region VARCHAR(30) NOT NULL,
    college_name VARCHAR(30) NOT NULL,
    college_address TEXT NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE userAddFaculty (
    id INT AUTO_INCREMENT PRIMARY KEY,
    faculty_name VARCHAR(30) NOT NULL,
    designation VARCHAR(30) NOT NULL,
    department VARCHAR(30) NOT NULL,
    contact VARCHAR(10) NOT NULL UNIQUE,
    state VARCHAR(30) NOT NULL,
    city VARCHAR(30) NOT NULL,
    region VARCHAR(30) NOT NULL,
    college_name VARCHAR(30) NOT NULL,
    college_address TEXT NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE `useraddstudent` (
    `id` INT PRIMARY KEY AUTO_INCREMENT,
    `name` VARCHAR(30) NOT NULL,
    `contact` VARCHAR(10) NOT NULL,
    `college_name` VARCHAR(30) NOT NULL,
    `department` VARCHAR(30) NOT NULL,
    `year` VARCHAR(10) NOT NULL,
    `hod_name` VARCHAR(30) NOT NULL,
    `hod_contact` VARCHAR(10) NOT NULL,
    `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE `addstudent` (
    `id` INT PRIMARY KEY AUTO_INCREMENT,
    `name` VARCHAR(30) NOT NULL,
    `contact` VARCHAR(10) NOT NULL,
    `college_name` VARCHAR(30) NOT NULL,
    `department` VARCHAR(30) NOT NULL,
    `year` VARCHAR(10) NOT NULL,
    `hod_name` VARCHAR(30) NOT NULL,
    `hod_contact` VARCHAR(10) NOT NULL,
    `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE addUser (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_name VARCHAR(30) NOT NULL UNIQUE,
    contact VARCHAR(10) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);